<Window x:Class="TextEditor.Windows.PrintPreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Предварительный просмотр" Height="600" Width="800">
    <DockPanel>
        <ToolBar DockPanel.Dock="Top">
            <Button Content="Печать" Click="PrintButton_Click" Width="80" Margin="5"/>
            <Button Content="Отмена" Click="CancelButton_Click" Width="80" Margin="5"/>
        </ToolBar>
        <FlowDocumentReader Name="DocumentViewer"/>
    </DockPanel>
</Window>
